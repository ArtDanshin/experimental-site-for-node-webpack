.navigation-head__item
  display inline-block
  position relative
  margin 0 20px
  font-family $opensans
  font-size 1.3rem
  &:after
    content ''
    position absolute
    bottom -3px
    left 0
    width 100%
    height 2px
    background-color $blueblack
    opacity 0
    transition opacity 200ms ease
  &:hover
  &:focus
    &:after
      opacity 1